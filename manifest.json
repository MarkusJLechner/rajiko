{

  "manifest_version": 2,
  "name": "Rajiko",
  "version": "0.1.4",

  "description": "__MSG_manifest_app_description__",

  "icons": {
    "256": "Circle-icons-radio.png"
  },
  "permissions": [
      "activeTab",
      "cookies",
      "storage",
      "webRequest",
      "webRequestBlocking",
      "*://*.radiko.jp/*",
      "downloads",
      "*://*.smartstream.ne.jp/*",
      "unlimitedStorage"
    ]

    ,
  "default_locale": "ja"

    ,
  "background": {
    "scripts": ["constants.js", "background.js"]

  },

  "content_scripts":[{
    "matches": ["*://*.radiko.jp/"],
    "js": ["ui/adjust-timezone.js"],
    "runAt":"document_start"
  }],
  "web_accessible_resources": ["ui/moment-timezone.js"],

  "browser_action": {
    "default_icon": "Circle-icons-radio.png",
    "default_popup": "popup.html",
    "default_title": "__MSG_popup_title__"

  },
  "applications": {
    "gecko": {
      "id": "rajiko@rajiko.addons.mozilla.org"
    }
  }

}